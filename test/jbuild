(alias
 ((name runtest)
  (deps (section.md section.md.expected (package mdx)))
  (action (progn
           (run mdx test -s Testing ${<})
           (diff? ${<}.expected ${<}.corrected)))))

(alias
 ((name runtest)
  (deps (labels.md labels.md.expected (package mdx)))
  (action (progn
           (run mdx test -s Testing ${<})
           (diff? ${<}.expected ${<}.corrected)))))

