(rule (copy dir.md dir2.md))

(alias
 (name   runtest)
 (deps   (:x dir2.md) (:y dir.md.expected) (package mdx))
 (action (progn
           (run ocaml-mdx test --root=.. %{x})
           (diff? %{y} %{x}.corrected))))

(alias
 (name   runtest)
 (deps   (:x prelude.md) (package mdx))
 (action (progn
           (run ocaml-mdx
                  test
                  --prelude-str "#require \"lwt\""
                  --prelude-str "toto:let x = \"42\""
                  %{x})
           (diff? %{x} %{x}.corrected))))

